@model List<TESIS002.Models.PacienteModel>
@{
    ViewBag.Title = "Buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p><h2 style="text-align:center">Buscar Paciente</h2></p>
<div class="row">
    <div class="col-xl-2">
        <p>
            <input type="radio" name="genero" value="femenino" />Nombre
        </p>
    </div>
    <div class="col-xl-2">
        <p>
            <input type="radio" name="genero" value="masculino" />Cedula
        </p>
    </div>
    <div class="col-xl-2">
        <p>
            <input type="radio" name="genero" value="masculino" />Nº Historia Clinica
        </p>
    </div>
</div>

<div class="row">
    <div class="col-xl-6">
        <p>
            <input name="parametroBusqueda" class="col-xl" style=" text-transform: uppercase;text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
        </p>
    </div>
    <div class="col-xl-3">
        <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer">BUSCAR</button>
    </div>
</div>

<p>
    <table class="table">
        <tr>
            <th scope="col">Paciente</th>
            <th scope="col">Historia Cl&iacute;nica</th>
            <th scope="col">C&eacute;dula</th>
            <th scope="col"></th>
        </tr>
        @foreach (var paciente in Model)
        {
        <tr>
            <td scope="col">@paciente.NombrePaciente</td>
            <td scope="col">@paciente.HistoriaClinicaPaciente</td>
            <td scope="col">@paciente.CedulaPaciente</td>
            <td scope="col">
                <form action="Mostrar" method="post">
                    <button name="idPaciente" value="@paciente.IdPaciente" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:35px; height:30px; cursor: pointer" type="submit">
                        <i class="fas fa-edit"></i>
                    </button>
                </form>
            </td>

        </tr>

        }

    </table>
</p>
<div class="text-center">
    <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" onclick="location='../Paciente/Ingresar'">NUEVO PACIENTE</button>
</div>

