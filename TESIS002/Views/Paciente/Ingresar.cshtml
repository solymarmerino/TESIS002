
@{
	ViewBag.Title = "Ingresar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Ingresar Paciente</h2>
<div class="text-right">
	<p>
		<label>Nº Historia Clinica</label>
		<br />
		<input style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" />
	</p>
</div>

<div class="row">
	<div class="col-xl-3">
		<p>
			<label>Primer Nombre</label>
			<input class="col-xl" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Segundo Nombre</label>
			<input class="col-xl" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Primer Apellido</label>
			<input class="col-xl" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Segundo Apellido</label>
			<input class="col-xl" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
</div>

<div class="row">
	<div class="col-xl-3">
		<p>
			<label>Cedula</label>
			<br />
			<input style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-6">
		<p>
			<label>Direccion</label>
			<br/>
			<input class="col-xl" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;">
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Telefono</label>
			<br />
			<input style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	
</div>
<div class="row">
	<div class="col-xl-3">
		<p>
			<label>Fecha de Nacimiento</label>
			<br />
			<input type="date" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Genero</label>
			<br>
			<input type="radio" name="genero" value="femenino" /> Femenino
			<input type="radio" name="genero" value="masculino" /> Masculino <br>
		</p>
	</div>
	<div class="col-md-3">
		<p>
			<label>Estado Civil</label>
			<br />
			<select style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
				<option value="soltero">SOLTERO</option>
				<option value="casado">CASADO</option>
				<option value="viudo">VIUDO</option>
				<option value="divorciado">DIVORCIADO</option>
				<option value="union libre">UNION LIBRE</option>
			</select>
		</p>
	</div>
	<div class="col-md-3">
		<p>
			<label>Tipo de Sangre</label>
			<br />
			<select style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
				<option value="a+">A+</option>
				<option value="a-">A-</option>
				<option value="b+">B+</option>
				<option value="b-">B-</option>
				<option value="ab+">AB+</option>
				<option value="ab-">AB-</option>
				<option value="o+">O+</option>
				<option value="o+">O-</option>
			</select>
		</p>
	</div>
</div>
<div class="row">
	<div class="col-xl-3">
		<p>
			<label>Contacto de Emergemcia</label>
			<input style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Afinidad</label>
			<input style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
	<div class="col-xl-3">
		<p>
			<label>Telefono</label>
			<input style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
		</p>
	</div>
</div>
<div class="row">
	<div class="col-xl-12">
		<p>
			<label>Alergias</label>
			<br />
			<textarea type="text" class="col-xl" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:80px;"></textarea>
		</p>
	</div>
</div>


<div class="text-center">
    <br />
    <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" onclick="location='../Paciente/Mostrar'">GUARDAR</button>
    <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" onclick="location='../Paciente/Listar'">SALIR</button>
</div>

