
@{
	ViewBag.Title = "Informe";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Informe</h2>
<br />
<div class="row">
	<div class="col-xl-6">
		<input type="radio" name="periodo" value="diario" /> Diario
		<input type="radio" name="periodo" value="mensual" /> Mensual
		<input type="radio" name="periodo" value="anual" /> Semestral
	</div>

	<div class="col-xl-5">
		<input type="radio" name="tipo" value="ingreso" /> Ingreso
