@model TESIS002.Models.PersonalModel

@{
    ViewBag.Title = "Ingresar Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Ingreso Personal</h2>
<br />
<form id="IngresarPersonal" action="Ingresar" method="post">
    <div class="row">
        <div class="col-xl-6">
            <p>
                <label>Nombre Completo</label>
                <br />
                <input name="NombrePersonal" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.NombrePersonal : string.Empty)" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? "disabled" : string.Empty) : string.Empty)/>

            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Cedula</label>
                <br />
                <input id="ced" name="CedulaPersonal" class="col-xl required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.CedulaPersonal : string.Empty)" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? "disabled" : string.Empty) : string.Empty)/>
                <label id="salida" name="ValidacionCedula" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Telefono</label>
                <br />
                <input name="TelefonoPersonal" class="col-xl required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.TelefonoPersonal : string.Empty)" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? "disabled" : string.Empty) : string.Empty)/>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3">
            <p>
                <label>Cargo</label>
                <br />
                <select name="CargoPersonal" class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? "disabled" : string.Empty) : string.Empty)>
                    <option value="administrador"  @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? (Model.CargoPersonal.Equals("recepcionista") ? "selected" : string.Empty) : string.Empty) : string.Empty)>Administrador</option>
                    <option value="enfermera" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? (Model.CargoPersonal.Equals("enfermera") ? "selected" : string.Empty) : string.Empty) : string.Empty)>Enfermera</option>
                    <option value="laboratorista" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? (Model.CargoPersonal.Equals("laboratorista") ? "selected" : string.Empty) : string.Empty) : string.Empty)>Laboratorista</option>
                    <option value="medico" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? (Model.CargoPersonal.Equals("medico") ? "selected" : string.Empty) : string.Empty) : string.Empty))>Medico</option>
                    <option value="recepcionista" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? (Model.CargoPersonal.Equals("recepcionista") ? "selected" : string.Empty) : string.Empty) : string.Empty)>Recepcionista</option>
                </select>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Usuario</label>
                <br />
                <input name="UsuarioPersonal" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.UsuarioPersonal : string.Empty)" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? "disabled" : string.Empty) : string.Empty)/>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Contraseña</label>
                <br />
                <input type="password" name="ContrasenaPersonal" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.ContrasenaPersonal : string.Empty)" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? "disabled" : string.Empty) : string.Empty)/>
            </p>
        </div>
    </div>
    <br />
</form>
<br />
<h5 class="text-center">Servicios del Personal</h5>
<form id="IngresarServicioPersonalServicio" action="Servicio" method="post">
    <input name="IdPersonal" value="@(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? Model.IdPersonal : string.Empty) : string.Empty)" type="hidden" />
    <div class="row">
        <div class="col-xl-6">
            <p>
                <label>Detalle</label>
                <select name="NombreServicio" class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                    <option value="CITA A">Cita A</option>
                    <option value="CITA B">Cita B</option>
                    <option value="SUTURACION A">Suturación a</option>
                    <option value="EXTRACCION PUNTOS">Extracción Puntos</option>
                    <option value="INFILTRACION">Infiltración</option>
                </select>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Valor</label>
                <br />
                <input name="ValorServicio" lass="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label></label>
                <br />
                <button name="Btn" value="ingresar" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" onclick="validarFormularioSimple()" type="submit" @(Model != null ? (!string.IsNullOrEmpty(Model.IdPersonal) ? string.Empty : "disabled") : "disabled")>Ingresar Servicio</button>
            </p>
        </div>
    </div>
</form>
    <div>
        <table class="table">
            <tr>
                <th scope="col">Detalle</th>
                <th scope="col">Valor</th>
                <th scope="col"></th>
            </tr>
            @foreach (var servicioPersonal in Model.ServicioPersonal)
            {
            <tr>
                <td scope="col">@servicioPersonal.NombreServicio</td>
                <td scope="col">@servicioPersonal.ValorServicio</td>
                <td>
                    <form id="EliminarServicioPersonal" action="Servicio" method="post">
                        <input name="IdPersonalServicio" value="@servicioPersonal.IdPersonal" hidden/>
                        <button name="Btn" value="@servicioPersonal.IdPersonalServicio" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:35px; height:30px; cursor: pointer" type="submit">&#9998;</button>
                    </form>
                </td>
            </tr>
            }
        </table>
    </div>

