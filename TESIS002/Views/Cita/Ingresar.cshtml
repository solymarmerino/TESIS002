@model TESIS002.Models.CitaModel
@{
	ViewBag.Title = "Ingresar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Ingresar Cita M&eacute;dica</h2>
<br />

<div class="row">
    <div class="col-md-4">
        <p>
            <label>Nombre</label>
            <br />
            <input style="text-transform:uppercase; text-align:left; border-radius:0.3rem; width:200px; height:40px;" value="@(Model!=null ? Model.Paciente.NombrePaciente : string.Empty)" disabled/>
        </p>
    </div>

    <div class="col-md-4">
        <p>
            <label>Cedula</label>
            <br />
            <input style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" value="@(Model!=null ? Model.Paciente.CedulaPaciente : string.Empty)" disabled/>
        </p>
    </div>

    <div class="col-md-4">
        <p>
            <label>Nº Historia Clinica</label>
            <br />
            <input style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" value="@(Model!=null ? Model.Paciente.HistoriaClinicaPaciente : string.Empty)" disabled/>
        </p>
    </div>
</div>
<form id="IngresarCita" action="Ingresar" method="post">
    <input name="IdPaciente" value="@Model.IdPaciente" hidden/>
    <div class="row">
        <div class="col-md-4">
            <p>
                <label>ESPECIALIDADES</label>
                <br />
                <select name="Especialidad" style="text-align:left; border-radius:0.3rem; width:200px; height:40px;">
                    <option value="especialidad a">PEDIATRIA</option>
                    <option value="especialidad b">MEDICINA GENERAL</option>
                    <option value="especialidad c">TRAHUMATOLOGO</option>
                </select>
            </p>
        </div>
        <div class="col-md-4">
            <p>
                <label>Medico</label>
                <br />
                <select name="Medico" style="text-align:left; border-radius:0.3rem; width:200px; height:40px;">
                    <option value="medico a">MEDICO A</option>
                    <option value="medico b">MEDICO B</option>
                    <option value="medico c">MEDICO C</option>
                    <option value="medico d">MEDICO D</option>
                </select>
            </p>
        </div>
        <div class="col-md-4">
            <p>
                <label>Tipo cita</label>
                <br />
                <select name="TipoCita" style="text-align:left; border-radius:0.3rem; width:200px; height:40px;">
                    <option value="cita a">CITA A</option>
                    <option value="cita b">CITA B</option>
                    <option value="cita c">CITA C</option>
                    <option value="cita d">CITA D</option>
                </select>
            </p>
        </div>
    </div>

    <div class="text-center">
        <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit">AGREGAR CITA</button>
    </div>
</form>
<br />
<p>
    <table class="table">
        <tr>
            <th scope="col">Paciente</th>
            <th scope="col">Historia Cl&iacute;nica</th>
            <th scope="col">C&eacute;dula</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Medico</th>
            <th scope="col">Tipo cita</th>
        </tr>
        @if (Model.ListaCita != null)
        {
            foreach (var citalista in Model.ListaCita)
            {
                <tr>
                    <td>@Model.Paciente.NombrePaciente</td>
                    <td>@Model.Paciente.HistoriaClinicaPaciente</td>
                    <td>@Model.Paciente.CedulaPaciente</td>
                    <td>@citalista.Especialidad</td>
                    <td>@citalista.Medico</td>
                    <td>@citalista.TipoCita</td>
                </tr>
            }
        }

    </table>
</p>

<br />
<div class="text-center">
    <form action="../Paciente/Mostrar" method="post">
        <button name="idPaciente" value="@Model.IdPaciente" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer">MAS</button>
    </form>
</div>


